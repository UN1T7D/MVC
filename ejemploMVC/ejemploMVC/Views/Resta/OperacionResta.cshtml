@model ejemploMVC.Models.Resta
@{
    ViewBag.Title = "Resta";
}

<h2>Resta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(Model => Model.num1, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.num1, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.num2, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.num2, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        <input type="submit" value="resultado" class="btn btn-seccess" />
    </div>

    <br /><br />
    if (ViewBag.resultado != null)
    {
        <p>Resultado:&nbsp;@ViewBag.resultado</p>
    }
}